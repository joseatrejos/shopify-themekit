/*---------------------------------------------------
CSS responsive breakpoints' media queries  */

/* Extra Large */
@media only screen and (min-width: 1200px) {
    .responsiveVideo{
        height:100%;
    }
    .prueba{
        color:red;
        font-size: 80px;
    }
    .correccionbtn{
        margin-top:0px;
    }
    .product-names{
        font-size: 2.5rem;
    }
    .imageIntroTitle{
        font-size:3rem !important;
    }
}

