/*----------------------------------------------------
Multimedia Animations */
.NameOfYourClass {
    animation: NameOfYourAnimation 20s;
    animation-fill-mode: forwards;
}

@keyframes NameOfYourAnimation {
    0% {opacity:0;}
    7% {opacity:0;}
    10.5% {opacity:1;}
    19% {opacity:1;}
    22.5% {opacity:0;}
    100% {opacity:0;}
}

