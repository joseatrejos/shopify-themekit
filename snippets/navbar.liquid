<nav class="navbar navbar-light navbar-expand-lg fixed-top bg-white text-center">
  <div class="container">

        <!-- Brand Logo -->
        <a class="navbar-brand logo logopoolmex" href="/" style="font-family: 'Source Serif Pro', serif;">
          <img src="https://cdn.shopify.com/s/files/1/0452/7344/8600/files/Original_on_Transparent.png?v=1597918633" style="margin-top:1.5px; max-width:105px;">
        </a>

        <!-- Mobile toggle -->
        <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navcol-1">
          <ul class="nav navbar-nav ml-auto">
            {% for link in linklists[section.settings.menu].links %}

              <!-- link.levels returns the number of nested steps below that link, check it out here: https://shopify.dev/docs/themes/liquid/reference/objects/link -->
              {% if link.levels == 0 %}

                <!-- Non-dropdown Navbar Links -->
                <li class="nav-item" role="presentation">
                  <a class="nav-link" href="{{ link.url }}" style="margin-right: 10px;color: rgb(0,0,0,0.75);">
                    {{ link.title }}
                  </a>
                </li>

              {% else %}
                <!-- Products' Dropdown -->
                <li class="nav-item dropdown">
                  <a class="dropdown-toggle nav-link menu_links" data-toggle="dropdown" aria-expanded="false" style="margin-right: 10px;color: rgb(0,0,0,0.75);border-color: rgba(0,0,0,0);">
                    Productos
                  </a>
                  <div class="dropdown-menu" role="menu">
                    {% for childlink in link.links %}
                      <a class="dropdown-item" role="presentation" href="{{ childlink.url }}">
                        {{ childlink.title }}
                      </a>
                    {% endfor %}
                  </div>
                </li>

              {% endif %}

            {% endfor %}

            <!-- Shopping Cart -->
            <ul class="navbar-nav">
              <li class="nav-item dropdown mini-cart">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: rgba(24,169,231,0.9);">
                  <i class="fas fa-shopping-cart"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <div class="dropdown-item-text">
                        {% include 'mini-cart' %}
                    </div>
                </div>
              </li>
            </ul>
          </ul>

        </div>
    </div>
</nav>
